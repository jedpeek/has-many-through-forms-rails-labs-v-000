<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<p>Categories:
  <ul>
    <% @post.categories.each do |c| %>
      <li><%= c.name %></li>
    <% end %>
  </ul>
</p>
<br><br>

<%= form_for @post do |f| %>
  <%= f.label "Comment" %>
  <%= f.text_field :comment %>

  <%= f.fields_for :comments, post.categories.build do |categories_fields| %>

    <%= categories_fields.text_field :name %>
  <% end %>

<h3>COMMENTS </h3>
  <ul>
    <% @post.comments.each do |c| %>
    <li> c.content</li>
    <% end %>
  </ul>
