<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<p>Categories:
  <ul>
    <% @post.categories.each do |c| %>
      <li><%= c.name %></li>
    <% end %>
  </ul>
</p>
<br><br>

<%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>

  <%= f.label "Content" %>
  <%= f.text_area :content %>

<h3>COMMENTS </h3>
  <ul>
    <% @post.comments.each do |c| %>
    <li> c.content</li>
    <% end %>
  </ul>
